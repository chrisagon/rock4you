  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
