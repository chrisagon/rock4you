{
  "name": "rock4you-api",
  "version": "1.0.0",
  "description": "API backend pour Rock4you.mobile avec Cloudflare Workers",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
